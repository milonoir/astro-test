---
export interface Props {
    title: string;

};

const {
    title
} = Astro.props;
---

<section class="py-4 text-center max-w-screen-lg mx-auto">
    <h2 class="py-2 md:py-4 font-lora text-xl md:text-4xl">{title}</h2>
    <div class="font-myriad text-base md:text-xl">
        <slot />
    </div>
</section>
