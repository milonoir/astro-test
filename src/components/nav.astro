---
const { items } = Astro.props;
---

<nav aria-label="Main Navigation" class="items-center w-full md:w-auto hidden md:flex md:mx-5 text-default overflow-y-auto overflow-x-hidden md:overflow-y-visible md:overflow-x-auto md:justify-self-center">
    <ul class="flex flex-col md:flex-row px-3 md:self-center w-full md:w-auto text-xl stracking-[0.01rem] font-medium md:justify-center">
        {items.map(({ text, href }) => (
            <li class="px-4 py-3">
                <a href={href}>{text}</a>
            </li>
        ))}
    </ul>
</nav>
