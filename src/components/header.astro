---
import { Image } from "astro:assets";
import menuIcon from "../assets/images/menu_hamburger_icon.svg";
import flagHU from "../assets/images/flag_hu_icon.svg";
import flagUK from "../assets/images/flag_uk_icon.svg";
import Nav from "./nav.astro";
import { getRelativeLocaleUrl } from "astro:i18n";

const navItems = Astro.currentLocale === "hu" ? [
    { text: "Főoldal", href: "#" },
    { text: "Rólam", href: "#" },
    { text: "Munkám", href: "#" },
] : [
    { text: "Home", href: "#" },
    { text: "About", href: "#" },
    { text: "Work", href: "#" },
];

const flag = Astro.currentLocale === "hu" ? flagUK : flagHU;
const url = Astro.currentLocale === "hu" ? getRelativeLocaleUrl("en") : getRelativeLocaleUrl("hu");
---

<header id="header" class="md:flex md:justify-between">
    <div class="flex justify-between items-center px-3 py-3">
        <a href="#">
            <h1 class="title font-lovelyHome text-2xl md:text-3xl py-4">Bolyós Anikó</h1>
        </a>
        <button class="md:hidden" aria-label="Toggle Menu" data-aw-toggle-menu>
            <Image class="w-12 h-12" src={menuIcon} alt=""/>
        </button>
    </div>

    <Nav items={navItems} />

    <div class="max-sm:hidden px-7 py-3 md:my-4">
        <a class="" href={url}>
            <Image class="w-12 h-12 border-none rounded place-self-center" src={flag} alt="" />
        </a>
    </div>
</header>
