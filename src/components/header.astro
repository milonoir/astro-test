---
import { Image } from "astro:assets";
import menuIcon from "../assets/images/menu_hamburger_icon.svg";
import Nav from "./nav.astro";

const navItems = [
    { text: "Home", href: "#"},
    { text: "About", href: "#"},
    { text: "Work", href: "#"},
];
---

<header id="header">
    <div class="flex justify-between items-center px-3 py-3">
        <a href="#">
            <h1 class="title font-lovelyHome text-2xl md:text-3xl py-4">Bolyós Anikó</h1>
        </a>
        <button class="md:hidden" aria-label="Toggle Menu" data-aw-toggle-menu>
            <Image class="w-12 h-12" src={menuIcon} alt=""/>
        </button>
    </div>
    <p>Current locale: {Astro.currentLocale}</p>

    <Nav items={navItems} />
</header>
