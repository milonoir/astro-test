---
import { Image } from "astro:assets";
import { getRelativeLocaleUrl } from "astro:i18n";
import menuIcon from "../assets/images/menu_hamburger_icon.svg";
import flagHU from "../assets/images/flag_hu_icon.svg";
import flagUK from "../assets/images/flag_uk_icon.svg";
import Nav from "./nav.astro";
import Logo from "./logo.astro";

const navItems = Astro.currentLocale === "hu" ? [
    { text: "Színtanácsadás", href: "#" },
    { text: "Színtolmácsolás", href: "#" },
    { text: "Rólam", href: "#" },
] : [
    { text: "Colour analysis", href: "#" },
    { text: "Colour interpretation", href: "#" },
    { text: "About", href: "#" },
];

const flag = Astro.currentLocale === "hu" ? flagUK : flagHU;
const url = Astro.currentLocale === "hu" ? getRelativeLocaleUrl("en") : getRelativeLocaleUrl("hu");
const home = getRelativeLocaleUrl(Astro.currentLocale, "/");
---

<header id="header" class="sticky top-0 z-40 backdrop-blur border-b border-slate-900/10 md:flex md:justify-between">
    <div class="flex justify-between items-center px-3 py-3">
        <a href={home}>
            <Logo />
        </a>
        <button class="md:hidden" aria-label="Toggle Menu" data-aw-toggle-menu>
            <Image class="w-12 h-12" src={menuIcon} alt=""/>
        </button>
    </div>

    <Nav items={navItems} />

    <div id="lang" class="flex max-md:hidden px-7 py-3 md:my-4">
        <a class="self-center" href={url}>
            <Image class="w-12 h-12 border-none rounded" src={flag} alt="" />
        </a>
    </div>
</header>
