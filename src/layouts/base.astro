---
import "../assets/styles/tailwind.css"

import Head from "../components/head.astro"
import Header from "../components/header.astro"
import Footer from "../components/footer.astro"
import Scripts from "../components/scripts.astro"
import Consent from "../components/consent.astro"
---

<!doctype html>
<html lang={Astro.currentLocale}>
    <Head />
    <body class="antialiased text-default bg-cream tracking-tight">
        <Header />
        <main>
            <div class="px-8">
                <slot />
            </div>
        </main>
        <Footer />
        <div class="sticky bottom-0">
            <Consent id="cookie" text="This website uses cookies." acceptText="Got it" infoText="More info" infoUrl="#" />
            <Consent id="privacy" text="I have read and understood the privacy notice." acceptText="Accept" infoText="More info" infoUrl="#" withCheckbox />
        </div>
        <Scripts />
    </body>
</html>
